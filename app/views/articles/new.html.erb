<h1>Create new articles</h1>

<!--Check first if there any error when trying to save the article-->
<!--Code for validation error-->
<% if @article.errors.any? %>
        <h3>The following messages prevent the articles of beeing saved</h3>
        <ul>
            <!--Enter in the iterator-->
            <% @article.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
             <% end %>
        </ul>
<% end %>

<%= form_with scope: :article, url: articles_path, local: true do |f| %>

    <p>
        <%= f.label :title %><br/>
        <%= f.text_field :title %>
    </p>
    
    <p>
        <%= f.label :description %><br/>
        <%= f.text_area :description %>
    </p>
    
    <p>
        <%= f.submit %>
    </p>

<% end %>

<%= link_to 'Return to listing page', articles_path %>
    